@model List<UserViewModel>

<h1> System Users </h1>
<hr>

<a href="~/User/Create" class="btn btn-primary">Add User</a>
<br/>
@if (Model.Any())
{
	<br />
	<table class="table table-hover">
		<thead class="thead-light">
			<tr>
				<th>User Name</th>
				<th>Email</th>
				<th>Phone</th>
				<th>Created Date</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var user in Model)
			{
				<tr>
					<th>@user.UserName</th>
					<th>@user.Email</th>
					<th>@user.PhoneNumber</th>
					<th>@user.CreatedAt.ToString("yyy/MM/dd")</th>
				</tr>
			}
		</tbody>
			
		

	</table>
	

}
else
{
	<br />
	<div class="alert alert-warning"> No Users </div>

}
